    DBEdit10: TDBEdit;
    Label10: TLabel;
    DBEdit11: TDBEdit;
    Label11: TLabel;
    dbeCep: TDBEdit;
    Label12: TLabel;
    dbeLogradouro: TDBEdit;
    Label19: TLabel;
    dbeNum: TDBEdit;
    Label20: TLabel;
    dbeComp: TDBEdit;
    Label21: TLabel;
    dbeBairro: TDBEdit;
