  TfrmccnCadClientes = class(TfrmStanRec)
    lbCodUnico: TLabel;
    dbeCodUnico: TDBEdit;
    lbNomFantasia: TLabel;
    dbeNomeFantasia: TDBEdit;
    Label1: TLabel;
    DBEdit1: TDBEdit;
    Label2: TLabel;
    DBEdit2: TDBEdit;
    PageControl1: TPageControl;
    TabSheet1: TTabSheet;
    dbrTipoCliente: TDBRadioGroup;
    Label16: TLabel;
    DBEdit3: TDBEdit;
    Label18: TLabel;
    DBEdit4: TDBEdit;
    Label3: TLabel;
    dbmDescricao: TDBMemo;
    Label4: TLabel;
    dbeEmail: TDBEdit;
    Label13: TLabel;
    dbeCpfCnpj: TDBEdit;
