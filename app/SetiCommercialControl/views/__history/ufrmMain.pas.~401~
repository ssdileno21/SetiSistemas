  ufrmccnCadProdutos, ufrmccnCadClientes, ufrmccnCadFuncionarios;

procedure TfrmMain.sbProdutosClick(Sender: TObject);
begin
    frmccnCadProdutos := TfrmccnCadProdutos.Create(Nil);
    frmccnCadProdutos.ShowModal;
end;

