function TFormConfig.ForSearch10GetReturnFieldName : string;
var
  vReturn : string;
begin
    vReturn := '';
    if (qParam10 >= 0) then
        vReturn := ForSearch1GetFieldName(1);
    Result := vReturn;
end;

